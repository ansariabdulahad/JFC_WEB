div.modal.animate__animated.animate__zoomIn#login-modal
    div.modal-dialog.modal-lg.modal-dialog-centered
        div.modal-content
            div.modal-body.p-5
                div.row
                    div.col-md-6.d-flex.justify-content-center.align-items-center
                        img(src="images/signup.jpg", width="100%" alt="login-img")
                    div.col-md-6
                        h1.display-4(style="font-size:35px;") Welcome !
                        form#login-form
                            div.form-group.mb-4
                                input(
                                    type="email" 
                                    placeholder="Company Email"
                                    name="email"
                                    required 
                                ).form-control.p-3.shadow-none.username
                                span.username-error.text-danger
                            div.form-group.mb-4
                                input(
                                    type="password" 
                                    placeholder="Company Password"
                                    name="password"
                                    required 
                                ).form-control.p-3.shadow-none.password
                                span.password-error.text-danger 
                            div.mb-4.d-flex.justify-content-between
                                div.form-check
                                    input(
                                        type="radio"
                                        name="loginAs"
                                        value="admin"
                                    ).form-check-input.loginAs#admin
                                    | Admin
                                    label(for="admin").form-check-label 
                                div.form-check
                                    input(
                                        type="radio"
                                        name="loginAs"
                                        value="employee"
                                    ).form-check-input.loginAs#employee
                                    | Employee
                                    label(for="employee").form-check-label 
                                div.form-check
                                    input(
                                        type="radio"
                                        name="loginAs"
                                        value="student"
                                    ).form-check-input.loginAs#student
                                    | Student
                                    label(for="student").form-check-label 
                            div.form-group.mb-4
                                button(
                                    type="submit"
                                    disabled
                                ).btn.btn-primary.login-btn Login
                                button.btn.btn-danger.d-none.disabled.before-send 
                                    span.spinner-grow.spinner-grow-sm
                                    span Processing...
                            p Create an account ? 
                                a(href="#" id="signup-modal-request") Signup 