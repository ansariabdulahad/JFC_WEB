div.modal.animate__animated.animate__zoomIn#signup-modal
    div.modal-dialog.modal-lg.modal-dialog-centered
        div.modal-content
            div.modal-body.p-4
                div.row
                    div.col-md-6.d-flex.justify-content-center.align-items-center
                        img(src="images/signup.jpg", width="100%" alt="signup-img")
                    div.col-md-6
                        h1.display-4(style="font-size:35px;") Register Now
                        form#signup-form
                            div.form-group.mb-4
                                input(
                                    type="text" 
                                    placeholder="Company Name"
                                    name="company"
                                    required
                                ).form-control.p-3.shadow-none.company-name
                                span.company-name-error.text-danger
                            div.form-group.mb-4
                                input(
                                    type="email" 
                                    placeholder="Company Email"
                                    name="email"
                                    required
                                ).form-control.p-3.shadow-none.company-email
                                span.company-email-error.text-danger 
                            div.form-group.mb-4
                                input(
                                    type="tel" 
                                    placeholder="Company Mobile"
                                    name="mobile"
                                    required
                                ).form-control.p-3.shadow-none 
                            div.form-group.mb-4
                                input(
                                    type="password" 
                                    placeholder="Company Password"
                                    name="password"
                                    required
                                ).form-control.p-3.shadow-none 
                            div.form-group.mb-4
                                button(type="submit").btn.btn-primary.signup-btn Signup
                                button.btn.btn-danger.d-none.disabled.before-send 
                                    span.spinner-grow.spinner-grow-sm
                                    span Processing...
                            p Already have an account ? 
                                a(href="#" id="login-modal-request") Login 